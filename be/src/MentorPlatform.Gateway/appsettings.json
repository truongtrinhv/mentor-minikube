{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          },
          {
            "RequestHeadersCopy": true
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "https"
          }
        ]
      },
      "signalr-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/hubs/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/hubs/{**catch-all}"
          }
        ]
      },
      "swagger-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/swagger/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api-destination-1": {
            "Address": "http://mentorplatform-api-service"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "SessionAffinity": {
          "Enabled": false,
          "Policy": "Cookie",
          "FailurePolicy": "Redistribute",
          "AffinityKeyName": ".Yarp.ReverseProxy.Affinity"
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": false,
          "MaxConnectionsPerServer": 100,
          "ActivityTimeout": "00:02:00",
          "KeepAliveTimeout": "00:01:00"
        },
        "HttpRequest": {
          "Timeout": "00:01:40",
          "Version": "2",
          "VersionPolicy": "RequestVersionOrLower"
        }
      }
    }
  },
  "RateLimiting": {
    "FixedWindow": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "QueueLimit": 10
    },
    "Sliding": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "SegmentsPerWindow": 6,
      "QueueLimit": 10
    }
  },
  "CircuitBreaker": {
    "FailureThreshold": 0.5,
    "SamplingDuration": "00:00:30",
    "MinimumThroughput": 10,
    "BreakDuration": "00:00:30"
  }
}
