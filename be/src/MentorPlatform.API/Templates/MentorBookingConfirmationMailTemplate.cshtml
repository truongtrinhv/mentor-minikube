@model MentorPlatform.Application.Commons.Models.Mail.EmailBookingConfirmationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Mentor Booking Confirmation</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            background-color: #fff;
            padding: 24px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
        }

        .header {
            text-align: center;
            color: #444;
            margin-bottom: 24px;
        }

        .booking-details {
            font-size: 16px;
            padding: 16px;
            border: 2px solid #e6f0fa;
            border-radius: 4px;
            background-color: #f9fcff;
            text-align: left;
            margin: 30px 0;
        }

        .footer {
            font-size: 12px;
            color: #777;
            text-align: center;
            margin-top: 32px;
        }

        a {
            color: #0066cc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="header">MENTOR SESSION CONFIRMATION</h2>
        <p>Hello <strong>@Model.MentorName</strong>,</p>
        <p>A new session has been booked for you on <strong>@Model.AppName</strong>. Here are the details of the session:</p>

        <div class="booking-details">
            <p><strong>Learner:</strong> @Model.LearnerName</p>
            <p><strong>Course:</strong> @Model.CourseName</p>
            <p><strong>Start time:</strong> @Model.StartTime</p>
            <p><strong>End time:</strong> @Model.EndTime</p>
            <p><strong>Session Type:</strong> @Model.SessionTypeName</p>
        </div>

        <p>Please prepare for the session and contact us if you have any scheduling conflicts or need further assistance.</p>
        <hr />

        <p class="footer">
            If you have any questions, feel free to contact us at
            <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a>.
        </p>
    </div>
</body>
</html>